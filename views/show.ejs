<% include partials/header-inner %>

<header class="inner-header">
    <div class="container-small">
        <div class="hero">
            <img src="<%= recipe.image %>" alt="Recipe">
        </div>
    </div>
</header>
<main id="main">
    <div class="container-small">
        <div class="card">
            <div class="card-content">
                <div class="rate-recipe">
                    <img src="/images/open-star.png" alt="Open Star">
                </div>
                <h1><%= recipe.title %></h1>
                <div class="recipe-info">
                    <div class="recipe-rating">
                        <% if(recipe.rating>0){ %>
                            <img src="/images/full-star.png" alt="Yellow Star"> <%= recipe.rating %>
                        <% } else { %>
                            <img src="/images/empty-star.png" alt="Gray Star"> <span>--</span>
                        <% } %>
                    </div>
                    <div class="recipe-time">
                        <img src="/images/clock.png" alt="Clock"> <%= recipe.time %>
                    </div>
                    <div class="recipe-difficulty">
                        <img src="/images/difficulty.png" alt="Chef Hat"> <%= recipe.difficulty %>
                    </div>
                </div>
            </div>
        </div>
        <div class="recipe-tags"><strong>Categories: </strong><%= recipe.tags.join(", "); %></div>
        <div class="wrap-even">
            <section id="ingredients">
                <h2>Ingredients</h2>
                <% recipe.ingredients.forEach(function(ingredient) { %>
                    <p><%= ingredient %></p>
                <% }); %>
            </section>
            <section id="directions">
                <h2>Directions</h2>
                <p class="preserve-lines"><%= recipe.directions %></p>
            </section>
        </div>
    </div>
</main>

<% include partials/footer %>